{
  "compilerOptions": {
    "lib": ["deno.ns", "dom"], // Provides Deno namespace and DOM types
    "strict": true, // Enable all strict type-checking options
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"] // Allows 'any' type if needed
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false // Deno convention often uses double quotes for imports
    }
  }
}
